        <activity
            android:name=".Telas.TelaPrincipal"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Telas.Tela_configuracao_aplicativo"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Telas.TelaGrafico"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name="org.achartengine.GraphicalActivity" />
        <activity
            android:name=".Telas.TelaRelatorio1"
            android:label="@string/app_name" >
        </activity>

        <!--Service declared in manifest -->
        <service android:name=".Servicos.AtualizarAutomatico"
