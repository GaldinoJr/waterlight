<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.appmedirconsumorecursos.Telas.TelaRelatorio1">


    <ImageView
        android:id="@+id/imgRecurso"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icone_luz" />

    <TextView
        android:id="@+id/txtNomeRecurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgRecurso"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgRecurso"
        android:text="@string/dadosIndisponiveis"
        android:textSize="@dimen/tamanho20dp" />

    <View
        android:id="@+id/Divisor1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/imgRecurso"
        android:background="#A8A8A8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dia"
        android:layout_below="@+id/Divisor1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Spinner
        android:id="@+id/spDia"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6" />

    <TextView
        android:id="@+id/mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mes"
        android:layout_above="@+id/spMes"
        android:layout_toRightOf="@+id/spDia"
        android:layout_marginLeft="5dp" />

    <Spinner
        android:id="@+id/spMes"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/spDia"
        android:layout_alignLeft="@+id/mes" />

    <TextView
        android:id="@+id/ano"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/ano"
        android:layout_alignTop="@+id/mes"
        android:layout_toRightOf="@+id/spMes"
        android:layout_marginLeft="5dp"/>

    <Spinner
        android:id="@+id/spAno1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/spMes"
        android:layout_alignLeft="@+id/ano" />

    <View
        android:id="@+id/Divisor2"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/spAno1"
        android:layout_marginTop="10dp"
        android:background="#A8A8A8" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvRelatorio"
        android:layout_below="@+id/Divisor2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
