<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaMenu" >

    <ImageView
        android:id="@+id/imgRecurso"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icone_luz" />

    <TextView
        android:id="@+id/txtNomeRecurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgRecurso"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgRecurso"
        android:text="@string/dadosIndisponiveis"
        android:textSize="@dimen/tamanho20dp" />

    <View
        android:id="@+id/Divisor1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/imgRecurso"
        android:background="#A8A8A8" />

    <TextView
        android:id="@+id/gastoHj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgRecurso"
        android:layout_marginTop="30dp"
        android:text="@string/Gastohj" />
    
    <TextView
        android:id="@+id/gastoAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gastoHj"
        android:layout_marginTop="20dp"
        android:text="@string/gastoAtual" />
    
    <TextView
        android:id="@+id/mediaFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gastoAtual"
        android:layout_marginTop="20dp"
        android:text="@string/MediaValorFinal" />
     
    <TextView
        android:id="@+id/txtGastoAtua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gastoAtual"
        android:layout_toRightOf="@+id/gastoHj"
        android:layout_marginLeft="10dp"
        android:text="@string/zero" />

    <TextView
        android:id="@+id/txtGastoHj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gastoHj"
        android:layout_alignLeft="@+id/txtGastoAtua"
        android:text="@string/zero" />

    <TextView
        android:id="@+id/txtMediaFina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mediaFinal"
        android:layout_alignLeft="@+id/txtGastoHj"
        android:text="@string/zero"
        android:numeric="decimal"
        android:maxLength="7" />

    <TextView
        android:id="@+id/R$GastoAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtGastoAtua"
        android:layout_alignBottom="@+id/txtGastoAtua"
        android:layout_toRightOf="@+id/txtGastoAtua"
        android:layout_marginLeft="30dp"
        android:text="@string/rs" />

    <TextView
        android:id="@+id/R$GastoHj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtGastoHj"
        android:layout_alignBottom="@+id/txtGastoHj"
        android:layout_alignLeft="@+id/R$GastoAtual"
        android:text="@string/rs" />

    <TextView
        android:id="@+id/R$MediaFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtMediaFina"
        android:layout_alignLeft="@+id/R$GastoHj"
        android:text="@string/rs" />

    <TextView
        android:id="@+id/txtR$GastoAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/R$GastoAtual"
        android:layout_alignBottom="@+id/R$GastoAtual"
        android:layout_toRightOf="@+id/R$GastoAtual"
        android:layout_marginLeft="10dp"
        android:text="@string/zero" />

    <TextView
        android:id="@+id/txtR$GastoHj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/R$GastoHj"
        android:layout_alignBottom="@+id/R$GastoHj"
        android:layout_alignLeft="@+id/txtR$GastoAtual"
        android:text="@string/zero" />

    <TextView
        android:id="@+id/txtR$MediaFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/R$MediaFinal"
        android:layout_alignLeft="@+id/txtR$GastoHj"
        android:text="@string/zero"
        android:numeric="decimal"
        android:maxLength="7" />
    <Button
        android:id="@+id/btnAtualizarDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgRecurso"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:text="@string/atualizar" />

    <Button
        android:id="@+id/btnHistorico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/historico"
        android:layout_alignTop="@+id/btnAtualizarDados"
        android:layout_toRightOf="@+id/btnAtualizarDados"
        android:layout_toEndOf="@+id/btnAtualizarDados" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GrÃ¡fico"
        android:id="@+id/btnGrafico"
        android:layout_alignTop="@+id/btnHistorico"
        android:layout_toRightOf="@+id/txtR$MediaFinal"
        android:layout_toEndOf="@+id/txtR$MediaFinal" />

</RelativeLayout><!-- From: file:/C:/Users/Galdino/StudioProjects/AppMedirConsumoRecursos/app/src/main/res/layout/activity_tela_menu.xml -->